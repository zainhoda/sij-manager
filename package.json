{
  "name": "sij-manager",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:mobile": "bun run --cwd apps/mobile start",
    "dev:server": "bun run --cwd apps/server dev",
    "dev": "concurrently \"bun run dev:mobile\" \"bun run dev:server\"",
    "ios": "bun run --cwd apps/mobile ios",
    "android": "bun run --cwd apps/mobile android",
    "web": "bun run --cwd apps/mobile web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
